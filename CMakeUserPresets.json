{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "environment": {
        "sourceDir": "${sourceDir}"
      },
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "TRUE"
      }
    },
    {
      "name": "debug",
      "inherits": "default",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "inherits": "default",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "clang-msvc",
      "inherits": "default",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang-cl.exe",
        "CMAKE_CXX_COMPILER": "clang-cl.exe",
        "CMAKE_LINKER": "lld-link.exe"
      }
    },
    {
      "name": "clang-gnu",
      "inherits": "default",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_LINKER": "ld.lld",
        "CMAKE_BUILD_WITH_INSTALL_RPATH": {
          "type": "BOOL",
          "value": "ON"
        },
        "CMAKE_INSTALL_RPATH_USE_LINK_PATH": {
          "type": "BOOL",
          "value": "ON"
        }
      }
    },
    {
      "name": "windows-default",
      "inherits": "default",
      "hidden": true,
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [ "Windows" ]
        }
      },
      "cacheVariables": {
        "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreadedDLL"
      }
    },
    {
      "name": "windows-debug",
      "inherits": [ "windows-default", "debug" ],
      "hidden": false
    },
    {
      "name": "windows-release",
      "inherits": [ "windows-default", "release" ],
      "hidden": false
    },
    {
      "name": "windows-debug-clang",
      "inherits": [ "windows-debug", "clang-msvc" ]
    },
    {
      "name": "windows-release-clang",
      "inherits": [ "windows-release", "clang-msvc" ]
    },
    {
      "name": "build-llvm-release",
      "inherits": "windows-release",
      "cacheVariables": {
        "LLVM_INCLUDE_TESTS": false,
        "LLVM_INCLUDE_BENCHMARKS": false,
        "LLVM_ENABLE_PROJECTS": "clang"
      }
    }
  ]
}