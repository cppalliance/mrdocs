{{#if (eq kind "type")~}}
    {{key}}{{#if is-pack}}...{{/if~}}
    {{#if name}} {{name}}{{/if~}}
    {{#if default}} = {{>template-arg default~}}{{/if~}}
{{else if (eq kind "non-type")~}}
    {{>declarator type decl-name=name}}{{#if is-pack}}...{{/if~}}
    {{#if default}} = {{>template-arg default~}}{{/if~}}
{{else if (eq kind "template")~}}
    {{>template-head}} typename{{#if is-pack}}...{{/if~}}
    {{#if name}} {{name}}{{/if~}}
    {{#if default}} = {{>template-arg default~}}{{/if~}}
{{/if}}