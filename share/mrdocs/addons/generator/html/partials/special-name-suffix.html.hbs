{{#if (eq kind "overload")}}
    {{>special-name-suffix (front members)~}}
{{else if (eq kind "function")~}}
    {{#if (eq class "constructor")}}
        <span class="small">[constructor]</span>
    {{~else if (eq class "destructor")~}}
        <span class="small">[destructor]</span>
    {{~/if~}}
{{/if}}
